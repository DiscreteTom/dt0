// test do-while
fn test1(a, b) {
  do {
    a--;
    b++;
  } while a;
  return b;
}

// test while
fn test2(a, b) {
  while a {
    a--;
    b++;
  }
  return b;
}

// test assign var in loop and access from outside of the loop
fn test3(a, b) {
  while a {
    a--;
    let c = a - b;
  }
  return c;
}